{
  "name": "C++ GCC 13 (C++23)",
  "image": "mcr.microsoft.com/devcontainers/cpp:ubuntu-24.04",

  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {}
  },

  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y g++-13 clang-format gdb cmake ninja-build",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools",
        "twxs.cmake",
        "llvm-vs-code-extensions.vscode-clangd"
      ],
      "settings": {
        "C_Cpp.default.compilerPath": "/usr/bin/g++-13"
      }
    }
  }
}
